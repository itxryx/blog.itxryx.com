---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'] & {
	prevPost?: CollectionEntry<'blog'> | null;
	nextPost?: CollectionEntry<'blog'> | null;
	breadcrumbItems?: { label: string; href?: string }[];
};

const { title, description, publishedAt, updatedAt, heroImage, ogImage, prevPost, nextPost, breadcrumbItems: customBreadcrumbItems } = Astro.props;

const jsonLd = {
	'@context': 'https://schema.org',
	'@type': 'BlogPosting',
	headline: title,
	description: description,
	...(publishedAt && { datePublished: publishedAt.toISOString() }),
	...(updatedAt && { dateModified: updatedAt.toISOString() }),
	author: {
		'@type': 'Person',
		name: 'itxryx',
	},
	publisher: {
		'@type': 'Organization',
		name: 'blog.itxryx.com',
	},
};

const breadcrumbItems = customBreadcrumbItems || [
	{ label: 'Home', href: '/' },
	{ label: 'Blog', href: '/blog' },
	{ label: title },
];
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} type="article" {...(ogImage && { image: ogImage })} />
		<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			article > :global(.breadcrumb) {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 1rem 1em 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				max-height: 30vh;
				width: auto;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				margin-bottom: 2rem;
				padding: 1em;
				color: var(--text-primary);
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 1.5rem 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: var(--text-secondary);
			}
			.last-updated-on {
				font-style: italic;
			}
			.post-navigation {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 3rem auto 2rem;
				padding: 2rem 1em;
				display: flex;
				justify-content: space-between;
				gap: 2rem;
				border-top: 1px solid var(--border-color);
			}
			.nav-previous,
			.nav-next {
				flex: 1;
			}
			.nav-previous a,
			.nav-next a {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				text-decoration: none;
			}
			.nav-next {
				text-align: right;
			}
			.nav-label {
				font-size: 0.875rem;
				color: var(--text-secondary);
			}
			.nav-title {
				font-size: 1rem;
				color: var(--accent);
				font-weight: bold;
			}
			.nav-previous a:hover .nav-title,
			.nav-next a:hover .nav-title {
				color: var(--accent-hover);
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<Breadcrumb items={breadcrumbItems} />
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt={title} />}
				</div>
				<div class="prose">
					<div class="title">
					<h1>{title}</h1>
						<div class="date">
							{
								publishedAt && (
									<p> published at: <FormattedDate date={publishedAt} /></p>
								)
							}
							{
								updatedAt && (
									<div class="last-updated-on">
										<p>last updated on: <FormattedDate date={updatedAt} /></p>
									</div>
								)
							}
						</div>
						<hr />
					</div>
					<slot />
				</div>
				{(prevPost || nextPost) && (
					<nav class="post-navigation">
						{prevPost && (
							<div class="nav-previous">
								<a href={`/blog/${prevPost.id}/`}>
									<span class="nav-label">← 前の記事</span>
									<span class="nav-title">{prevPost.data.title}</span>
								</a>
							</div>
						)}
						{nextPost && (
							<div class="nav-next">
								<a href={`/blog/${nextPost.id}/`}>
									<span class="nav-label">次の記事 →</span>
									<span class="nav-title">{nextPost.data.title}</span>
								</a>
							</div>
						)}
					</nav>
				)}
			</article>
		</main>
		<Footer />
	</body>
</html>
