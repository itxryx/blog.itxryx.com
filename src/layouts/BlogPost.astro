---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'] & {
	prevPost?: CollectionEntry<'blog'> | null;
	nextPost?: CollectionEntry<'blog'> | null;
};

const { title, description, publishedAt, updatedAt, heroImage, ogImage, prevPost, nextPost } = Astro.props;

const jsonLd = {
	'@context': 'https://schema.org',
	'@type': 'BlogPosting',
	headline: title,
	description: description,
	...(publishedAt && { datePublished: publishedAt.toISOString() }),
	...(updatedAt && { dateModified: updatedAt.toISOString() }),
	author: {
		'@type': 'Person',
		name: 'itxryx',
	},
	publisher: {
		'@type': 'Organization',
		name: 'blog.itxryx.com',
	},
};
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} type="article" {...(ogImage && { image: ogImage })} />
		<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
	</head>

	<body>
		<Header />
		<main class="w-full max-w-full m-0">
			<article>
				<div class="w-full">
					{heroImage && <Image class="block mx-auto rounded-xl shadow-card max-h-[30vh] w-auto" width={1020} height={510} src={heroImage} alt={title} />}
				</div>
				<div class="content-width mb-8 p-4">
					<div class="mb-4 py-4 text-center leading-tight">
						<h1 class="m-0 mb-6">{title}</h1>
						<div class="mb-2 text-text-secondary">
							{
								publishedAt && (
									<p> published at: <FormattedDate date={publishedAt} /></p>
								)
							}
							{
								updatedAt && (
									<div class="italic">
										<p>last updated on: <FormattedDate date={updatedAt} /></p>
									</div>
								)
							}
						</div>
						<hr />
					</div>
					<slot />
				</div>
				{(prevPost || nextPost) && (
					<nav class="content-width my-12 py-8 px-4 flex justify-between gap-8 border-t border-border">
						{prevPost && (
							<div class="flex-1 group">
								<a href={`/blog/${prevPost.id}/`} class="flex flex-col gap-2 no-underline">
									<span class="text-sm text-text-secondary">← 前の記事</span>
									<span class="text-base text-accent font-bold group-hover:text-accent-hover">{prevPost.data.title}</span>
								</a>
							</div>
						)}
						{nextPost && (
							<div class="flex-1 text-right group">
								<a href={`/blog/${nextPost.id}/`} class="flex flex-col gap-2 no-underline">
									<span class="text-sm text-text-secondary">次の記事 →</span>
									<span class="text-base text-accent font-bold group-hover:text-accent-hover">{nextPost.data.title}</span>
								</a>
							</div>
						)}
					</nav>
				)}
			</article>
		</main>
		<Footer />
	</body>
</html>
