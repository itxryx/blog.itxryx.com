---
interface Props {
	items: {
		label: string;
		href?: string;
	}[];
}

const { items } = Astro.props;
---

<nav aria-label="パンくずリスト" class="content-width py-4">
	<ol class="list-none p-0 m-0 flex flex-wrap gap-2 items-center">
		{items.map((item, index) => (
			<li class="flex items-center gap-2 text-sm">
				{item.href ? (
					<a href={item.href} class="text-accent no-underline hover:text-accent-hover hover:underline">{item.label}</a>
				) : (
					<span aria-current="page" class="text-text-secondary">{item.label}</span>
				)}
				{index < items.length - 1 && <span class="text-text-secondary select-none">/</span>}
			</li>
		))}
	</ol>
</nav>
